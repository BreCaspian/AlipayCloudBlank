.container {
  padding: 30rpx;
  font-size: 28rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.section {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.btn {
  margin-bottom: 20rpx;
}

.result, .error {
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result {
  background-color: #f8f8f8;
}

.error {
  background-color: #fff0f0;
}

.result-title, .error-title, .tips-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.error-title {
  color: #e64340;
}

.result-content, .error-content {
  word-break: break-all;
  font-family: monospace;
  font-size: 24rpx;
  white-space: pre-wrap;
}

.tips {
  margin-top: 40rpx;
  background-color: #f8faff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
}

.tips-content text {
  margin-bottom: 10rpx;
  line-height: 1.5;
}
