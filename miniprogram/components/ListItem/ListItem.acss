.list-item {
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 10px;
  padding: 10px;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}
.item-content {
  display: flex;
  align-items: center;
}
.item-img {
  width: 80px;
  height: 80px;
  margin-right: 10px;
}
.item-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20px;
}
.productName {
  color: black;
}
.price {
  color: red;
}